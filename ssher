#!/bin/bash

IFS=',' read -a ips <<< "$1"; shift
commands="cd irsec2025"

for arg in "$@"; do
    if [ "$arg" = "r" ] || [ "$arg" = "c" ] || [ "$arg" = "clean" ]; then
        for ip in "${ips[@]}"; do
            ssh "$ip" "rm -rf irsec2025"
        done
    elif [ "$arg" = "i" ] || [ "$arg" = "install" ]; then
        for ip in "${ips[@]}"; do
            scp -qr $(pwd) "$ip":
        done
    else
        commands+="; echo; $arg"
    fi
done

for ip in "${ips[@]}"; do
    ssh -t "$ip" "$commands"
done

